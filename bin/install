#!/bin/bash -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH


client_result ''
client_result '!!!This Cartridge uses Stunnel to secure your connection to Memcached!!!'
client_result 'Use the following certificate on Stunnel client'
client_result `cat $OPENSHIFT_MEMCACHED_DIR/conf/stunnel.pem`
client_result 'Use the following env vars on your application to connect to memcached:'
client_result ' OPENSHIFT_MEMCACHED_STUNNEL_HOST'
client_result ' OPENSHIFT_MEMCACHED_STUNNEL_PORT'
client_result ' '
